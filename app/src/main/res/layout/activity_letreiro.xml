<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.silva.lucas.projetoopencv.LetreiroActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont"
        android:text="Texto:"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTexto"
        android:textColor="@color/colorFont"
        android:text="Digite aqui!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFont"
        android:text="Tipo de Fonte:"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnTipoFonte"
        android:background="@color/colorButton"
        android:spinnerMode="dialog"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFont"
                android:text="Tamanho:"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnTamanho"
                android:background="@color/colorButton"
                android:spinnerMode="dialog"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFont"
                android:text="Cor:"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnCor"
                android:background="@color/colorButton"
                android:spinnerMode="dialog"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFont"
                android:text="Posicao X:"/>
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/volPosicaoX"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFont"
                android:text="Posicao Y:"/>
            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/volPosicaoY"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/refresh_64"
            android:layout_marginEnd="5dp"
            android:id="@+id/imgAtualizar"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgImagem"
        android:background="@color/colorBackgroundImage"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAplicar"
            android:background="@color/colorButton"
            android:textColor="@color/colorFontButton"
            android:text="Aplicar"/>
        <Button
            android:layout_marginLeft="60dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            android:background="@color/colorButton"
            android:textColor="@color/colorFontButton"
            android:text="Cancelar"/>
    </LinearLayout>

</LinearLayout>
